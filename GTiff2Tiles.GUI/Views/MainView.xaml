<Window x:Class="GTiff2Tiles.GUI.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:cal="http://www.caliburnproject.org"
        mc:Ignorable="d"
        TextElement.FontSize="20"
        Title="GTiff2Tiles"
        Height="500"
        Width="675"
        MinHeight="500"
        MinWidth="675"
        WindowStartupLocation="CenterScreen"
        Icon="/GTiff2Tiles.GUI;component/Resources/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <!-- Main Grid -->
        <Grid Grid.Row="1" Grid.Column="1"
              IsEnabled="{Binding IsEnabled}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Grid.Row="0" -->
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="Input file's path:"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="2"
                     VerticalAlignment="Center"
                     Text="{Binding InputFilePath}"/>
            <Button Grid.Row="0" Grid.Column="4"
                    Content="{Binding InputFileButtonText}"
                    cal:Message.Attach="InputFileButton"/>
            
            <!-- Grid.Row="2" -->
            <TextBlock Grid.Row="2" Grid.Column="0"
                       Text="Output directory path:"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Row="2" Grid.Column="2"
                     VerticalAlignment="Center"
                     Text="{Binding OutputDirectoryPath}"/>
            <Button Grid.Row="2" Grid.Column="4"
                    Content="{Binding OutputDirectoryButtonText}"
                    cal:Message.Attach="OutputDirectoryButton"/>
            
            <!-- Grid.Row="4" -->
            <TextBlock Grid.Row="4" Grid.Column="0"
                       Text="Temp directory path:"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Row="4" Grid.Column="2"
                     VerticalAlignment="Center"
                     Text="{Binding TempDirectoryPath}"/>
            <Button Grid.Row="4" Grid.Column="4"
                    Content="{Binding TempDirectoryButtonText}"
                    cal:Message.Attach="TempDirectoryButton"/>

            <!-- Grid.Row="6" -->
            <TextBlock Grid.Row="6" Grid.Column="0"
                       Text="Minimum zoom:"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Row="6" Grid.Column="2"
                     Grid.ColumnSpan="3"
                     VerticalAlignment="Center"
                     Text="{Binding MinZ}"/>

            <!-- Grid.Row="8" -->
            <TextBlock Grid.Row="8" Grid.Column="0"
                       Text="Maximum zoom:"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Row="8" Grid.Column="2"
                     Grid.ColumnSpan="3"
                     VerticalAlignment="Center"
                     Text="{Binding MaxZ}"/>

            <!-- Grid.Row="10" -->
            <TextBlock Grid.Row="10" Grid.Column="0"
                       Text="Select algorithm:"
                       VerticalAlignment="Center"/>
            <ComboBox Grid.Row="10" Grid.Column="2"
                      Grid.ColumnSpan="3"
                      VerticalContentAlignment="Center"
                      ItemsSource="{Binding Algorithms}"
                      SelectedItem="{Binding Algorithm}"/>

            <!-- Grid.Row="12" -->
            <TextBlock Grid.Row="12" Grid.Column="0"
                       Text="Number of threads:"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Row="12" Grid.Column="2"
                     Grid.ColumnSpan="3"
                     VerticalAlignment="Center"
                     Text="{Binding ThreadsCount}"/>

            <!-- Grid.Row="14" -->
            <Button Grid.Row="14" Grid.Column="0"
                    Grid.ColumnSpan="5"
                    Content="{Binding StartButtonContent}"
                    cal:Message.Attach="StartButton"/>

            <!-- Grid.Row="16" -->
            <ProgressBar Grid.Row="16" Grid.Column="0"
                         Grid.ColumnSpan="5"
                         Height="25"
                         Value="{Binding ProgressBarValue}"/>

            <!-- Grid.Row="18" -->
            <Grid Grid.Row="18" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="{Binding ProgressTextBlock}"
                           VerticalAlignment="Center"/>
                <TextBlock Grid.Row="0" Grid.Column="2"
                           VerticalAlignment="Center"
                           Text="{Binding ProgressBarValue}"/>
            </Grid>

            <!-- Grid.Row="20" -->
            <Grid Grid.Row="20" Grid.Column="2"
                  Grid.ColumnSpan="3"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Bottom">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Version:"
                           VerticalAlignment="Bottom"/>
                <TextBlock Grid.Row="0" Grid.Column="2"
                           VerticalAlignment="Bottom"
                           Text="{Binding Version}"/>
            </Grid>

            <!-- Grid.Row="22" -->
            <Grid Grid.Row="22" Grid.Column="2"
                  Grid.ColumnSpan="3"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Bottom">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Copyright"
                           VerticalAlignment="Bottom"/>
                <TextBlock Grid.Row="0" Grid.Column="2"
                           VerticalAlignment="Bottom"
                           Text="{Binding Copyright}"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
